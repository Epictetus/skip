<% content_for :contents_left do -%>
  <%= render :partial => "groups/manage_action_box" %>
<% end -%>

<% content_for :contents_right do -%>
  <div class="desc ui-corner-all margin05emver"><%= _('Here you can manage admin privilages and force users to leave the group.')%></div>
  <%= i18n_will_paginate_with_container_wrapper @participations %>

  <div style="margin: 10px auto 10px auto; width: 100%; text-align: center;">
    <table border="1" class="normal" style="width: 80%; margin: auto;">
      <tr>
        <th style="width:10%;"><%= _('Administrator') %></th>
        <th><%= _('Name') %></th>
        <th><%= _('Action') %></th>
        <th><%= _('Action') %></th>
      </tr>
    <% even_or_odd = 0 -%>
    <% @participations.each_with_index do |participation, index| -%>
      <% even_or_odd = 1 - even_or_odd %>
      <tr>
        <td class="line_<%= even_or_odd -%>">
          <% if participation.owned? -%>
            <%= _('Administrator')%>
          <% end -%>
        </td>
        <td class="line_<%= even_or_odd -%>"><%= h participation.user.name -%></td>
        <td align="center" class="line_<%= even_or_odd -%>">
          <% unless participation.user_id == current_user.id -%>
            <%= link_to _("[Force to leave the group]"), [current_tenant, current_target_group, participation], :confirm => _("Are you sure to force this user to leave the group?"), :method => :delete %>
          <% end -%>
        </td>
        <td align="center" class="line_<%= even_or_odd -%>">
          <% unless participation.user_id == current_user.id -%>
            <% if participation.owned? -%>
              <%= link_to _("[Remove admin control]"), polymorphic_path([current_tenant, current_target_group, participation], :action => :remove_admin_control), :method => :put %>
            <% else -%>
              <%= link_to _("[Add admin control]"), polymorphic_path([current_tenant, current_target_group, participation], :action => :add_admin_control), :method => :put %>
            <% end -%>
          <% end -%>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
  <%= i18n_will_paginate_with_container_wrapper @participations %>
<% end -%>
