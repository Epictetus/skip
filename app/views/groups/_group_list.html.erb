<% unless groups.empty? -%>
  <%= hidden_field_tag("authenticity_token", form_authenticity_token) %>
  <%= i18n_will_paginate_with_container_wrapper @groups %>
  <table class="group_list_box normal">
    <tr>
      <th width="50%"><%= _('Group Name')%></th>
      <th><%= _('Category') %></th>
      <th><%= _('Status') %></th>
      <th><%= _('Approval') %></th>
      <th><%= _('Members count') %></th>
      <th><%= _('Entries count') %></th>
      <th><%= _("The entry's Last updated date") %></th>
    </tr>
  <% groups.each do |group| -%>
    <tr class="<%= cycle('line_0', 'line_1') %>">
      <td><%= group_link_to group %></td>
      <td><%= icon_tag(group.group_category.icon) + h(group.group_category.name) %></td>
      <td><%= participation_state(group, user_id) -%></td>
      <td><%= _("%s Required") % icon_tag('key') if group.protected? %></td>
      <td><%= group.group_participations.active.count %></td>
      <% entries = BoardEntry.owned(group) %>
      <td><%= entries.count %></td>
      <td><%= entries.last.last_updated.strftime("%Y/%m/%d") unless entries.empty? %></td>
    </tr>
  <% end -%>
  </table>
  <%= i18n_will_paginate_with_container_wrapper @groups %>
<% end -%>
