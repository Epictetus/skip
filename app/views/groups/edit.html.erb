<% content_for :contents_left do -%>
  <%= render :partial => "manage_action_box" %>
<% end -%>

<% content_for :contents_right do -%>
<div class="edit_form_space ui-corner-all">
  <% form_for([current_tenant, current_target_group]) do |f| -%>
    <%= render :partial => f %>
    <%= submit_tag _('Update'), :disable_with => _('Updating...') %>
  <% end -%>
  <div class="desc ui-corner-all margin05em" style="padding: 5px;">
    <%= link_to(_("[[Delete]]"), [current_tenant, current_target_group], :confirm => _('Are you sure to delete?'), :method => :delete) %>
  </div>
</div>
<% end -%>
