function sub_window_open(url, title, width, height) {
  sub_window = window.open(url, title, 'width='+width+',height='+height+',resizable=yes,scrollbars=yes');
  sub_window.focus();
};
function open_hiki() { sub_window_open('<%= "#{root_url}hiki.html" %>', '<%= _("Hiki記法")%>', 500,600); };
function open_rule() { sub_window_open('<%= "#{root_url}custom/rules.html" %>', '<%= _("Terms of Use")%>', 780,700); };
function open_site() { sub_window_open('<%= "#{root_url}custom/about_this_site.html" %>', '<%= _("About this site")%>', 720,660); };

