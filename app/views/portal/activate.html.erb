<div class="content">
  <h3>アクティベート</h3>
  <% form_for :user, @user, :url => {:controller => '/portal', :action => 'activate'} do |f| -%>
    <%= error_messages_for :user %>
    <%= hidden_field_tag :code, @user.activation_token %>
    <table>
      <tr>
        <th><%= f.label 'password', 'パスワード' %></th>
        <td><%= f.password_field 'password' %></td>
      </tr>
      <tr>
        <th><%= f.label 'password_confirmation', '確認パスワード' %></th>
        <td><%= f.password_field 'password_confirmation' %></td>
      </tr>
    </table>
    <%= submit_tag '保存' %>
  <% end -%>
</div>
