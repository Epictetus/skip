<ul id="nav">
  <li class="home_link"><%= link_to_unless_current(icon_tag('house', :title => _('My Page')) + _('My Page'), root_url) %></li>
  <li><%= link_to_unless_current(icon_tag('report', :title => _('Entries')) + _('Entries'), [current_tenant, :board_entries]) if BoardEntry.count > 0 %></li>
  <li><%= link_to_unless_current(icon_tag('disk_multiple', :title => _('Files')) + _('Files'), [current_tenant, :share_files]) if ShareFile.count > 0 %></li>
  <li><%= link_to_unless_current(icon_tag('user_suit', :title => _('Users')) + _('Users'), [current_tenant, :users]) if User.count > 1 %></li>
  <li><%= link_to_unless_current(icon_tag('group', :title => _('Groups')) + _('Groups'), [current_tenant, :groups]) if Group.count > 0 %></li>
  <% if event_enabled? -%>
  <li><%= link_to(icon_tag('flag_blue', :title => _('Events')) + _('Events'), apps_events_path) %></li>
  <% end -%>
  <% if current_tenant.initial_settings['wiki'] and current_tenant.initial_settings['wiki']['use'] -%>
  <li><%= link_to(icon_tag('page_white_paint', :title => _('Wiki')) + _('Wiki'), wiki_path((Page.root || Page.first({:conditions=>["parent_id = ?",0]})).title)) %></li>
  <% end -%>
</ul>
