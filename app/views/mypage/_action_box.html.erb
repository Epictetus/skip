<div class="box_space">
  <div class="box_space_title"></div>
  <div class="box_space_body">
    <ul>
      <li><%= link_to(content_tag('span', _('Write a blog entry')) , {:controller => '/edit', :action => :index}, :title => _('Write a blog entry'), :class => 'rounded') %></li>
      <li><%= link_to(content_tag('span', _('Write a question')), {:controller => '/edit', :action => :index, :category => '質問'}, :title => _('Write a question'), :class => 'rounded') %></li>
      <% url_hash = {:controller => '/share_file', :action => :new, :owner_symbol => h(current_user.symbol), :owner_name => h(current_user.name)} -%>
      <li><%= link_to(content_tag('span', _('Upload a file')), url_hash, :title => _('Upload a file'), :class => 'rounded', :onclick => "sub_window_open('#{url_for(url_hash)}', 'subwindow', 550, 400); return false;") %></li>
      <li><%= link_to(content_tag('span', _('Create a new group')), {:controller => '/groups', :action => :new}, :title => _('Create a new group'), :class => 'rounded' ) %></li>
    </ul>
  </div>
</div>
