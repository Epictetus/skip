<%= %(<div id="#{id_name}">) %>

<h2 class="topix_title"><%= icon_tag('asterisk_orange') -%><%= title_name %></h2>
<div class="topix_body">
<% items.each do |item| -%>
  <div class="item_line">
    <div class="item_name"><%= item[:name] %></div>
    <div class="item_desc"><%= item[:desc] %></div>
    <div class="item_date"><%= item[:date].strftime("%Y/%m/%d %H:%M") %></div>
  </div>
<% end -%>
</div>

</div>
