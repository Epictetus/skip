<% thankyous = Thankyou.comment_is_not('').created_at_gte(1.month.ago).all(:include => [:receiver, :sender]).sort_by{|i| rand}.slice!(0..4) -%>
<% unless thankyous.empty? -%>
<div id="thankyou_box" class="right_box ui-corner-all">
  <h2 class="ui-corner-top"><%= _("Recently Thankyous") %></h2>
  <table>
    <tbody>
      <% thankyous.each do |thankyou| -%>
      <tr>
        <td rowspan="2" style="width: 64px; padding: 5px;">
          <%= user_link_to_with_portrait(thankyou.receiver, :width => 64, :height => 64) %>
        </td>
        <td style="padding: 5px 5px 0 0;">
          from <%= user_link_to(thankyou.sender) %>
        </td>
      </tr>
      <tr>
        <td style="padding: 0px 5px 5px 0;">
          <span class="small_text"><%=h truncate(thankyou.comment, 20) %></span>
        </td>
      </tr>
      <% end -%>
    </tbody>
  </table>
</div>
<% end -%>
