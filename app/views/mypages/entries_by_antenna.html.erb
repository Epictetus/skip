<% content_for :contents_left do -%>
  <%= render :partial => 'contents_left_base' %>
<% end -%>

<% content_for :contents_right do -%>
  <% @symbol2name_hash ||= nil -%>

  <div id="antenna_navi">
    <div class="operation_left">
      <% form_tag polymorphic_path([current_tenant, :board_entries], :action => :be_read) do -%>
        <% @entries.each do |entry| -%>
          <%= hidden_field_tag 'entry_ids[]', entry.id %>
        <% end -%>
        <%= link_to _('[Set entries in the page as read]'), '#', :id => 'check_all_link' %>
      <% end -%>
      <% form_tag polymorphic_path([current_tenant, :board_entries], :action => :be_unread) do -%>
        <% @entries.each do |entry| -%>
          <%= hidden_field_tag 'entry_ids[]', entry.id %>
        <% end -%>
        <%= link_to _('[Set entries in the page as unread]'), '#', :id => 'uncheck_all_link' %>
      <% end -%>
    </div>
    <div class="operation_right">
      <span class="item">
        <% if params[:read] -%>
        <%= link_to _('[Hide read entries]'), :target_type => @antenna_entry.key, :read => false %>
        <% else %>
        <%= link_to _('[Show read entries]'), :target_type => @antenna_entry.key, :read => true %>
        <% end %>
      </span>
      <%= i18n_will_paginate @entries, :container => false %>
    </div>
  </div>

  <%= hidden_field_tag "authenticity_token", form_authenticity_token %>

  <%= render :partial => "board_entries/topix_entries",
    :locals => {
      :title => @antenna_entry.title,
      :entries => @entries,
      :symbol2name_hash => @symbol2name_hash,
      :with_checkable_read => true
    }
  %>

  <div style="text-align:right;">
    <%= i18n_will_paginate @entries %>
  </div>
<% end -%>
