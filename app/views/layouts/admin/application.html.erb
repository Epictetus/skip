<body>
<div id="header">
  <%= header_logo_link %>
  <%= skip_menu_link %>
  <%= render :partial => "shared/full_text_search" if INITIAL_SETTINGS['full_text_search_setting'] %>
</div><!-- header -->

<div id="top">
  <div id="user_ctl">
    <%= link_to icon_tag(:report_edit, :alt=> 'ブログを書く', :title => 'ブログを書く') + 'ブログを書く', :controller => '/edit', :action => :index %>
