<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ja" xml:lang="ja">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta http-equiv="Content-Script-Type" content="text/javascript" />
  <link rel="shortcut icon" href="<%= controller.request.relative_url_root -%>/favicon.ico" />
  <title><%= Admin::Setting.app_title -%></title>
<script language="JavaScript" type="text/javascript">
<!--
var relative_url_root = '<%= controller.request.relative_url_root -%>';
//-->
</script>
  <%= skip_stylesheet_link_tag 'style' %>
  <%= skip_stylesheet_link_tag 'nyroModal.full.css' %>

  <%= skip_javascript_include_tag 'prototype' %>
  <%= skip_javascript_include_tag 'jquery.js' %>
  <script language="JavaScript" type="text/javascript">$j = jQuery.noConflict();</script>
  <%= skip_javascript_include_tag 'effects' %>
  <%= skip_javascript_include_tag 'dragdrop' %>
  <%= skip_javascript_include_tag "jquery.nyroModal.js" %>
  <%= skip_javascript_include_tag "skip_util" %>
  <%= javascript_include_tag "application" %>

<style type="text/css">
a:hover {
  color: blue;
  background-color: yellow;
  font-weight: bold;
}
#attention {
  position: absolute;
  top: 10px;
  left: 10px;
  width: 440px;
  padding: 1px;
  background-color: #ffcccc;
  border: 1px solid silver;
  color: red;
}
.desc {
  position: absolute;
  right: 10px;
  top: 250px;
  width: 400px;
  border: solid 1px silver;
  background-color: white;
  padding: 5px;
}
* html .desc {
  top: 245px;
}
#login {
  position: absolute;
  right: 10px;
  top: 40px;
  width: 175px;
  _height: 180px;
  padding: 2px;
  border: 1px solid silver;
  background-color: #f0f0ff;
  font-size: 12px;
}
#login-title {
  line-height: 130%;
  padding: 2px;
  background-color: #ddddff;
  border-top: 1px solid #FFFFFF;
  border-bottom: 1px solid #AAAAAF;
  font-size: 14px;
  font-weight: bold;
  color: #77778C;
  text-align: center;
}
.menu-category {
  line-height: 80%;
  padding: 3px;
  background-color: #ebddff;
  border-top: 1px solid #FFFFFF;
  border-bottom: 1px solid #AAAAAF;
  font-size: 13px;
  font-weight: bold;
  color: #77778C;
  text-align: center;
}
.skip-menu {
  line-height: 80%;
  padding: 3px;
  margin: 1px 10px;
  border-top: 1px solid #FFFFFF;
  border-bottom: 2px solid #AAAAAF;
  font-size: 13px;
  color: #77778C;
}
.menu-item {
  margin: 10px;
  background-color: white;
}
div#main {
  position: relative;
  background-image: url('<%= controller.request.relative_url_root -%>/custom/images/<%= @img_name -%>');
  padding: 10px;
  _width: 100%;
  height: 400px;
}
span.red, span.blue, span.green {
  font-weight: bold;
  font-size: 18px;
}
span.red { color: red; }
span.green { color: #00A000; }
span.blue { color: blue; }
</style>
</head>

<body>
<div id="logo"><%= link_to(image_tag("#{controller.request.relative_url_root}/custom/images/title_logo.png", :alt => Admin::Setting.app_title)) -%></div>

<div id="top">
  <div id="menu_btn"></div>
  <div id="user_ctl">
    <a href="mailto:<%= Admin::Setting.contact_addr -%>" target="_blank">お問い合わせ</a>
    <a href="#" onclick="javascript:getSubwindowRule()"> 利用規約</a>
    <a href="#" onclick="javascript:getSubwindowScript(relative_url_root + '/custom/about_this_site.html', 720, 660)">このサイトについて</a>
  </div>
  <%= render :partial => '/layouts/flash_messages' %>
  <%= render :partial => "login_failed_message" %>
</div>

<div id="main">

<% if @attentions and @attentions.size > 0 %>
<div id="attention"><ul style="background-color: white; margin: 5px;">
  <% @attentions.each do |attention| %>
  <li style="margin: 5px 20px; border-bottom: dashed 1px silver"><%= attention %></li>
  <% end %>
</ul></div>
<% end %>

<div id="login"><p id="login-title">ログイン</p><%= render :partial => 'shared/login_form' %></div>
<div id="desc_before_login" class="desc"></div>

</div><!-- main -->

<%= skip_footer_link -%>

</body>
