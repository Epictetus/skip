<div class="content">
  <h3><%= _('Signup') %></h3>
  <p><%= _('以下で指定されたメールアドレスにユーザ登録のためのURLを送信します。') %></p>
  <% form_tag :action => :invite do -%>
    <table>
      <tr>
        <th><label for="email"><%= _('UserProfile|Email') %></label></th>
        <td><%= text_field_tag(:email, params[:email], :size => 40) %></td>
      </tr>
    </table>
    <%= submit_tag _('Send') %>
  <% end -%>
</div>
