<div class="content">
  <h3>パスワードリセット</h3>
  <% form_for :user, @user, reset_password_path do |f| -%>
    <%= error_messages_for :user %>
    <%= hidden_field_tag :code, params[:code] %>
    <table>
      <tr>
        <td><%= f.label 'password', 'パスワード' %></td>
        <td><%= f.password_field 'password' %></td>
      </tr>
      <tr>
        <td><%= f.label 'password_confirmation', '確認パスワード' %></td>
        <td><%= f.password_field 'password_confirmation' %></td>
      </tr>
    </table>
    <%= submit_tag '保存' %>
  <% end -%>
</div>
