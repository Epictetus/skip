<% content_for :contents_left do -%>
  <%= render :partial => "users/manage_action_box" %>
<% end -%>

<% content_for :contents_right do -%>
  <div class="desc ui-corner-all margin05emver">
    <p><%= _("An email will be sent to the address you have entered in order to confirm the existence.<br/>\nThe request will be completed by visiting the URL given in the email within 24 hours.")%></p>
  </div>
  <%= template_error_messages_for 'applied_email' %>

  <div class="edit_form_space ui-corner-all">
  <%= content_tag(:p, _('Another request for changing email found. The former request will be discarded and we will proceed on the new email address.')) if @applied_email.id %>
  <% form_for @applied_email, :url => tenant_user_applied_email_path(current_tenant, current_user) do |f| -%>
    <table class="normal user_info">
      <tr>
        <th width="100px"><label for="page_title"><%= _('Current Email Address')%></label></th>
        <td style="padding:5px;"><%=h current_user.email %></td>
      </tr>
      <tr>
        <th><label for="page_title"><%= f.label :email, _('New Email Address')%></label></th>
        <td style="padding:5px;"><%= f.text_field :email %></td>
      </tr>
    </table>
    <%= f.submit _("Apply"), :disable_with => _('Saving...') %>
  <% end -%>
  </div>
<% end -%>
