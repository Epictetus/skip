<%# :object => bookmarks  -%>

<table border="0" class="normal" width="98%" style="overflow:hidden ; margin: 5px 10px; border: none; _width: 95%;">
<% even_or_odd = 0 -%>
<% bookmarks.each do |bookmark| -%>
  <% even_or_odd = 1 - even_or_odd -%>
  <tr>
    <td class="line_<%= even_or_odd -%>">
      <div class="bookmark_line">
        <span class="title"><%= link_to_bookmark_url bookmark %></span>
        <span class="users"><%= link_to(n_("%{count} user", "%{count} users", bookmark.bookmark_comments_count) % {:count => bookmark.bookmark_comments_count},url_for_bookmark(bookmark)) %></span>
        <%= icon_tag('new') if (Date.today - bookmark.created_on.to_date) < 10 %>
        <p><%= icon_tag('tag_blue') %><%= bookmark_comment_tag_search_links_tag Tag.commented_to(bookmark).all.map(&:name).join(',') %></p>
      </div>
    </td>
  </tr>
<% end -%>
</table>
