
<%= render :partial => "new_bookmark" %>

<div class="search_cond_space">
<% form_tag({:action => 'search'}, :method => 'get') do -%>
<table class="search_cond_box">
  <tr>
    <th width="60"><%= _('Title')%></th>
    <td width="150"><%= text_field_tag('title', params[:title]) %></td>
    <th width="60"><%= _('Display Order')%></th>
    <td width="150"><%= selected_tag("sort_type", params[:sort_type],@sort_types) -%></td>
  </tr>
  <tr>
    <th><%= _('Search Range')%></th>
    <td colspan="4">
      <%= radio_button_tag('type', 'all', params[:type]=='all') %><%= _('All')%>
      <%= radio_button_tag('type', 'user', params[:type]=='user') %><%= _('Users')%>
      <%= radio_button_tag('type', 'page', params[:type]=='page') %><%= _('Blogs / BBSs')%>
      <%= radio_button_tag('type', 'internet', params[:type]=='internet') %><%= _('Internet')%>
    </td>
  </tr>
  <%= render :partial => 'search/tag_search' %>
</table>

<div class="submit"><%= submit_tag _('Search') %></div>
<% end %>
</div>

<div class="search_result_space" style="position: relative; width: 100%; margin-left: auto; margin-right: auto;">
<% if @pages and @pages.item_count > 0 -%>
  <div class="navi"><%= page_link @pages -%></div>
  <%= render :partial => "bookmarks", :object => @bookmarks %>
  <div class="navi"><%= page_link @pages -%></div>
<% end %>

</div>
