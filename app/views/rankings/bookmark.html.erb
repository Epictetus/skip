<div class="search_cond_space">
  <div class="title"><u><%=h _("Popular postings in %s―") % @target_date.strftime(_('%B %d %Y')) %></u>
    <span style="color: darkgray; font-size: 10px; font-weight: normal;"><%= _('Time Last Updated: ')%><%=h @last_updated %></span></div>
  <div style="margin-left: 15px;"><%=h _("Bookmarks that got most comments during a week between %{from} and %{to}:") % {:from => @target_date.ago(6.day).strftime(_('%B %d %Y')), :to => @target_date.strftime(_('%B %d %Y'))} %></div>
  <div style="text-align: right;">
    <% if Time.now.beginning_of_day > @target_date %>
    <%= link_to _("Popular postings in %s―") % @target_date.tomorrow.strftime(_('%B %d %Y')), :target_date => @target_date.tomorrow.strftime('%Y-%m-%d') %>
    /
    <% end %>
    <%= link_to _("Popular postings in %s―") % @target_date.yesterday.strftime(_('%B %d %Y')), :target_date => @target_date.yesterday.strftime('%Y-%m-%d') %>
  </div>
</div>

<div class="search_result_space" style="position: relative; width: 100%; margin-left: auto; margin-right: auto;">
  <%= render :partial => "bookmarks/bookmarks", :object => @bookmarks %>
</div>
