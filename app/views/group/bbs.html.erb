<% content_for :contents_left do -%>
  <% form_tag({}, {:method => 'get'}) do -%>
    <%= render(:partial => 'entries/recent_box', :locals => { :owner => @group }) %>
    <%= render(:partial => 'entries/user_archive_box', :locals => { :user_archives => @user_archives }) %>
    <%= render(:partial => 'entries/categories_box', :locals => { :categories => @categories }) %>
    <%= render(:partial => 'entries/aim_type_box') %>
    <%= render(:partial => 'entries/search_box') %>
  <% end -%>
<% end -%>

<% content_for :contents_right do -%>
  <% if @entry -%>
    <%= render(
      :partial => 'entries/entry_detail',
      :locals => {
        :entry => @entry,
        :prev_entry => @prev_entry,
        :next_entry => @next_entry,
        :tb_entries => @tb_entries,
        :to_tb_entries => @to_tb_entries,
        :checked_on => @checked_on,
        :editable => @editable,
        :entry_accesses => @entry_accesses,
        :total_count => @total_count,
        :bookmark_comments_count => @bookmark_comments_count }) %>
  <% elsif @entries -%>
    <%= render(:partial => 'entries/entries_list', :locals => { :entries => @entries }) %>
  <% end -%>
<% end -%>
