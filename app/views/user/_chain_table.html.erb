<% if @pages && @pages.item_count > 0 -%>
<div class="navi"><%= page_link @pages -%></div>

<% @result.each do |result| %>
<table class="chain_table">
  <tr>
    <th rowspan="2" valign="top"><%= user_link_to_with_portrait(result[:from_user]) %><br/>
     <%= user_link_to result[:from_user] %>
    </th>
    <td class="arrow"><%= icon_tag('resultset_next')  %></td>
    <td class="message"><div class="rich_style"><%= parse_permalink(result[:from_message]) %></div></td>
    <td class="arrow"></td>
    <th rowspan="2" valign="bottom"><%= user_link_to_with_portrait(result[:to_user]) %><br/>
      <%= user_link_to result[:to_user] %>
    </th>
  </tr>
  <% unless result[:counter_message].blank? -%>
  <tr>
    <td class="arrow"></td>
    <td class="message"><div class="rich_style"><%= parse_permalink(result[:counter_message]) %></div></td>
    <td class="arrow"><%= icon_tag('resultset_previous') unless result[:counter_message].empty? %></td>
  </tr>
  <% end -%>
</table>
<% end %>

<div class="navi"><%= page_link @pages -%></div>

<% end -%>
