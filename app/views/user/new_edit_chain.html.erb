<% content_for :contents_left do -%>
  <% unless @current_user.id == @user.id -%>
    <%= render(:partial => 'user/action_box', :locals => { :user => @user }) %>
  <% end -%>
  <%= render :partial => 'user/join_groups_box', :locals => { :user => @user } %>
  <%= render :partial => 'user/follow_chains_box', :locals => { :user => @user } %>
<% end -%>

<% content_for :contents_right do -%>
<div class="desc ui-corner-all margin05emver"><%= _("Introduce %s to others!") % h(@user.name)%></div>
<div class="edit_form_space ui-corner-all richtext">
<% form_tag :action => @submit_action, :uid => @user.uid do -%>
  <%= template_error_messages_for 'chain' %>
  <p><label for="chain_comment"><%= _('Introduction: ')%><label></p>
  <p><%= text_area 'chain', 'comment', :class => 'invisible' %></p>
  <%= submit_tag @submit_name %>
<% end %>
</div>

<%= ckeditor 'chain_comment' %>
<% end -%>
