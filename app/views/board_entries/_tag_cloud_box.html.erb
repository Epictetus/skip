<%
 # ブログ・フォーラムの左側のボックス（タグ）
 # :locals => { :categories }
-%>
<% owner ||= current_target_owner %>
<% if tags = Tag.entries_owned_by(owner).all(:select => '*, count(tags.id) as count') and !tags.empty? -%>
<div class="box_space">
  <div class="box_space_title"><%= icon_tag 'tag_blue' -%><%= _('Tags')%></div>
  <div class="box_space_body tag_cloud">
  <% tag_cloud tags do |name, count, css_class| -%>
    <%=
        link_to_unless_current h(name), polymorphic_path([current_tenant, current_target_owner, :board_entries], :tag_words => h(name)), :class => "tag #{css_class}" do
          content_tag :span, h(name), :class => "tag #{css_class}"
        end
    %>
    <span class="count">(<%= h count %>)</span>
  <% end -%>
  </div>
  <div class="box_space_bottom"></div>
</div><!-- box_space -->
<% end -%>
