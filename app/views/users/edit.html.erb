<% content_for :contents_left do -%>
  <%= render :partial => "mypages/manage_menu", :locals => { :selected_menu => @menu } %>
<% end -%>

<% content_for :contents_right do -%>
  <div class="desc ui-corner-all margin05emver">
    <p><%= _('Information provided within the site will only be used for the operation of the site.')%></p>
  </div>

  <div class="edit_form_space ui-corner-all">
  <% form_for @user, :url => tenant_user_path(current_tenant, @user), :html => {:id => "registration_form", :class => 'margin10'} do |f| -%>
    <% tabindex = 0 -%>
    <%= render :partial => "form", :locals => {:form => f, :tabindex => tabindex} %>
    <%= f.submit _('Save'), :disable_with => _("Saving..."), :class=>"margin05em" %>
  </div>
  <% end -%>
<% end -%>
