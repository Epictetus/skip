<%= render :partial => '/admin/contents_left' %>
<% content_for :contents_right do -%>
<h2><%= _('Listing %{model}') % {:model => _('account')} %></h2>

<div class="box tabular">
  <%= render :partial => '/admin/search_box' %>
  <%= render :partial => '/admin/shared/sortable_table',
             :locals => {
               :columns => %w[code name email section],
               :objects => @accounts,
               :class_name => 'Admin::Account',
               :link_elem => [['Show','object'], ['Edit','edit_admin_account_path(object)'], ['Destroy','object',{:confirm => _('Are you sure?'), :method => :delete}]]
             }
  -%>
</div>
<br />

<%= link_to _('New %{model}') % {:model => _('account')}, new_admin_account_path %> |
<%= link_to _('New account from csv'), import_new_admin_account_path %>
<% end -%>
