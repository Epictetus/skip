<%= render :partial => '/admin/contents_left' %>
<% content_for :contents_right do -%>
<h1>Listing accounts</h1>

<table>
  <tr>
    <% %w[Code Name Email Section].each do |title| -%>
    <th><%= _("Admin account|#{title}") %></th>
    <% end -%>
  </tr>

<% for account in @accounts %>
  <tr>
    <td><%=h account.code %></td>
    <td><%=h account.name %></td>
    <td><%=h account.email %></td>
    <td><%=h account.section %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_admin_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to _('New account'), new_admin_account_path %>
<% end -%>
