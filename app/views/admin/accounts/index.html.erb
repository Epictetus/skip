<%= render :partial => '/admin/contents_left' %>
<% content_for :contents_right do -%>
<h2><%= _('Listing %{model}') % {:model => _('account')} %></h2>

<div class="box tabular">
<%= render :partial => '/admin/search_box' %>
<table class="normal">
  <tr>
    <% %w[Code Name Email Section].each do |column| -%>
    <th><%= _("Admin::Account|#{column}") %></th>
    <% end -%>
  </tr>

<% for account in @accounts %>
  <tr class="<%= cycle('line_0', 'line_1') %>">
    <td><%=h account.code %></td>
    <td><%=h account.name %></td>
    <td><%=h account.email %></td>
    <td><%=h account.section %></td>
    <td><%= link_to _('Show'), account %></td>
    <td><%= link_to _('Edit'), edit_admin_account_path(account) %></td>
    <td><%= link_to _('Destroy'), account, :confirm => _('Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to _('New %{model}') % {:model => _('account')}, new_admin_account_path %> |
<%= link_to _('New account from csv'), import_new_admin_account_path %>
<% end -%>
