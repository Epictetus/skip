<%= render :partial => '/admin/contents_left' %>
<% content_for :contents_right do -%>
<h2><%= _('Editing %{model}') % {:model => _('account')} %></h2>
<div class="box tabular">
  <% form_for(@account) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :code %>
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :section %>
    <%= f.text_field :section %>
  </p>
  <p>
    <%= f.submit _('Update') %>
  </p>
  <% end %>
</div>
<%= link_to _('Show'), @account %> |
<%= link_to _('Back'), admin_accounts_path %>
<% end -%>
