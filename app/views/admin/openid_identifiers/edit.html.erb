<%= render :partial => '/admin/contents_left' %>
<% content_for :topic_path do -%>
<%= render :partial => '/admin/shared/topic_path' %>
<% end -%>
<% content_for :contents_right do -%>

<div class="box tabular">
<% form_for(@openid_identifier, :url => admin_user_openid_identifier_url(@user, @openid_identifier), :method => :put) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :url %>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.submit _('Update'), :disable_with => _('Updating...') %>
  </p>
<% end %>
</div>
<%= link_to _('Show'), admin_user_openid_identifier_url(@user, @openid_identifier) %>
<% end -%>
