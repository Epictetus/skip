<%= render :partial => '/admin/contents_left' %>
<% content_for :topic_path do -%>
<%= render :partial => '/admin/shared/topic_path' %>
<% end -%>
<% content_for :contents_right do -%>


<div class="box">
  <p>
    <b><%= label @user.class, :name %>:</b>
    <%=h @user.name %>
  </p>

  <p>
    <b><%= label @user.class, :status %>:</b>
    <%=h _("User|Status|#{@user.status}") %>
  </p>

  <p>
    <b><%= label @user.class, :admin %>:</b>
    <%=h _("User|Admin|#{@user.admin.to_s}") %>
  </p>

</div>

<%= link_to _('Edit'), edit_admin_user_path(@user) %> |
<%= link_to _('openid identifier'), admin_user_openid_identifiers_path(@user) %> |
<%= link_to(_('Change uid'), {:action => :change_uid, :id => @user}) if @user.user_uids.size > 1 %>

<% end -%>

