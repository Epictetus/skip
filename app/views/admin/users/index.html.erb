<%= render :partial => '/admin/contents_left' %>
<% content_for :contents_right do -%>
<h2><%= _('Listing %{model}') % {:model => _('user')} %></h2>

<div class="box tabular">
  <%= render :partial => '/admin/search_box' %>
  <%= render :partial => '/admin/shared/sortable_table',
             :locals => {
               :columns => %w[name status admin],
               :objects => @users,
               :class_name => 'Admin::User',
               :link_elem => [['Show','admin_user_path(object)'], ['Edit','edit_admin_user_path(object)'], ['Destroy','admin_user_path(object)',{:confirm => _('Are you sure?'), :method => :delete}]]
             }
  -%>
</div>
<br />

<% end -%>
