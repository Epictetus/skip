<% content_for :topic_path do -%>
<%= render :partial => '/admin/shared/topic_path' %>
<% end -%>

<div class="box tabular">
  <% form_for(@user, :url => admin_tenant_user_path(current_tenant, @user)) do |f| %>
  <%= render :partial => f %>
  <p><%= f.submit _('Update'), :disable_with => _('Now Updating...') %></p>
  <% end %>
</div>

<% links = [] -%>
<% links << link_to(_('Editing %{model}') % {:model => _('user profile')}, admin_tenant_user_user_profile_path(current_tenant, @user)) if current_tenant.user_profile_masters.count > 0 %>
<%= links.join(' | ') %>
