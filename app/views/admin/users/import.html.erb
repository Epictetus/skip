<%= render :partial => '/admin/contents_left' %>
<% content_for :topic_path do -%>
<%= render :partial => '/admin/shared/topic_path' %>
<% end -%>
<% content_for :contents_right do -%>
<div class="box">
  <h3><%= _('Instructions for importing from a CSV file.') %></h3>
  <p style="color:red;"><b><%= _('CSV file needs to be encoded in UTF-8.') %></b></p>
  <p style="color:red;"><b><%= _('New user records will be created when the first column of the CSV file does not match the login ID of any existing record, while matching records will be updated.') %></b></p>
  <p style="color:red;"><b><%= _('Changes made to departments, passwords etc by users will be overwritten upon data update.') %></b></p>

    <div class="search_box">
    <% form_tag import_new_admin_user_path, :multipart => true, :id => 'import_form' do -%>
    <label for="file"><%= _('CSV file') %></label><%= file_field_tag :file %>
    <button id="import_confirmation_button"><%= _('Import confirmation') %></button>
    <%= submit_tag _('Upload'), :disable_with => _('Uploading...') %>
   <p><label for="create_only"><%= _("Append unregistered users only") %></label><%= check_box_tag "create_only", "1", true %><%= help_icon_tag :content => _("|You can ignore existing users and append unregistered users only by checking the checkbox.<br/>Uncheck and set attributes below if you want to batch update informations of existing users.") %></p>
    <h4><%= _('Update attributes below:')%><%= help_icon_tag :content => _("|You can update certain attribute(s) by checking the checkboxes. See the sample to create CSV file.<br/>Name, password and email address are mandatory items for new users.") %></h4>
    <p>
      <label for="options[name]"><%= s_("Admin::User|Name") %></label><%= check_box_tag "options[name]", "1", true, :class => "csv_options disable_uncheck_create_only" %>
      <label for="options[password]"><%= s_("Admin::User|Password") %></label><%= check_box_tag "options[password]", "1", true, :class => "csv_options disable_uncheck_create_only" %>
      <label for="options[email]"><%= s_("Admin::UserProfile|Email") %></label><%= check_box_tag "options[email]", "1", true, :class => "csv_options disable_uncheck_create_only" %>
      <label for="options[section]"><%= s_("Admin::UserProfile|Section") %></label><%= check_box_tag "options[section]", "1", true, :class => "csv_options" %>
    </p>
    <% end -%>

    <h3><%= _('Sample CSV file format') %></h3>
<pre>
111111<span class="example_name">,<%= _('Taro Yamada')%></span><span class="example_password">,password</span><span class="example_email">,yamada@example.com</span></span><span class="example_section">,<%= _('Accounting')%></span>
222222<span class="example_name">,<%= _('Hanako Yamada')%></span><span class="example_password">,password</span><span class="example_email">,h_yamada@example.com</span><span class="example_section">,<%= _('Human Resources')%></span>
333333<span class="example_name">,<%= _('Jiro Suzuki')%></span><span class="example_password">,password</span><span class="example_email">,suzuki@example.com</span><span class="example_section">,<%= _('Development')%></span></pre>
  </div>
  <% unless @users.empty? -%>
  <h2><%= _('Content of CSV file') %></h2>
  <p><%= @error_row_only ? _('Showing lines containing error(s) only. Click the icon on the right edge of each row containing error(s) to show the detail. Follow the example to fix.') : _('Click the icon on the right edge of each row containing error(s) to show the detail. Follow the example to fix.') %></p>
  <table class="normal sortable">
    <thead>
      <tr>
        <th><%= _('Line') %></th>
        <th><label><%= h Admin::Setting.login_account %></label></th>
        <th><%= label Admin::User.name, :name %></th>
        <th><%= label Admin::User.name, :password %></th>
        <th><%= label Admin::UserProfile.name, :email %></th>
        <th><%= label Admin::UserProfile.name, :section %></th>
        <td style="width:16px;"></td>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do |array, line| -%>
        <% @user, @user_profile, @user_uid = array -%>
        <% unless (@error_row_only &&  @user.errors.empty?) -%>
        <tr class="<%= cycle('line_1', 'line_0') %>">
          <td><%=h line+1 %></td>
          <td><%=h @user_uid.uid %></td>
          <td><%=h @user.name %></td>
          <td><%=h '********' if @user.crypted_password %></td>
          <td><%=h @user_profile.email %></td>
          <td><%=h @user_profile.section %></td>
          <td>
        <% unless @user.errors.empty? -%>
          <%
            error_msg = []
            error_msg.concat @user.errors.full_messages.reject{|msg| msg.include?("User uid") || msg.include?("User profile") }
            error_msg.concat @user_profile.errors.full_messages
            error_msg.concat @user_uid.errors.full_messages
          %>
          <%= help_icon_tag :content => "|#{error_msg.join('|')}" %>
        <% end -%>
          </td>
        </tr>
      <% end -%>
      <% end -%>
    </tbody>
  </table>
  <% end -%>
</div>
  <%= link_to _('Listing %{model}') % {:model => _('user')}, admin_users_path %>
<% end -%>

<% content_for :javascript do -%>
<script type="text/javascript">
$j(function(){
    $j('#import_confirmation_button')
    .click(function(){
        $j(this)
        .attr('disabled', 'disabled')
        .text('<%= _('Uploading...') %>');

        $j('#import_form')
        .attr('action', '<%= import_confirmation_new_admin_user_path %>')
        .submit();
        return false;
    })

    // CSVでアップロードするカラムが変更されたときにサンプルも変化する様に
    $j('.csv_options')
    .click(function(){
	this.id.match(/\[(.*)\]/);
	$j('.example_' + RegExp.$1).toggle();
    });
    $j.each($j('.csv_options'), function(i) {
	this.id.match(/\[(.*)\]/);
	var target_obj = $j('.example_' + RegExp.$1);
	if (this.checked) {
	    target_obj.show();
	} else {
	    target_obj.hide();
	}
    });

    // 既存のユーザを更新しない場合は、必須項目のチェックを外せない様に
    $j('#create_only')
    .click(function() {
	checkCreateOnly(this);
    });

    $j.fn.disableAndAppendHidden = function () {
	this
	.attr("disabled", "disabled")
	.attr("checked",true)
	.each(function() {
	    $j(this).after("<input type='hidden' value='"+this.value+"' name='"+this.name+"'/>");
	});
	return this
    };

    $j.fn.enableAndRemoveHidden = function () {
	this
	.removeAttr("disabled")
	.next("input[type='hidden']")
	.remove();
	return this
    }

    var checkCreateOnly = function(obj) {
	if (obj.checked) {
	    $j('.disable_uncheck_create_only')
	    .disableAndAppendHidden();

	    $j('.example_name, .example_password, .example_email').show();
	} else {
	    $j('.disable_uncheck_create_only')
	    .enableAndRemoveHidden();
	}
    };
    checkCreateOnly($j('#create_only')[0]);

});
</script>
<% end -%>
