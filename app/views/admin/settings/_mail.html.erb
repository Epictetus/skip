  <p><%= settings_label_with_text_field_tag :smtp_settings_port %></p>
  <p><%= settings_label_with_select_tag :smtp_settings_authentication, ['', 'plain', 'login', 'cram_md5'], Admin::Setting.smtp_settings_authentication.to_s %></p>
