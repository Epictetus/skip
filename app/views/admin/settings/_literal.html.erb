<% @revert_columns = [] -%>
<% @revert_columns.concat(name_columns = %w(abbr_app_title login_account point_button)) -%>
<h4><%= _('名称・名前') %></h4>
<div class="box tabular">
<% name_columns.each do |key| -%>
  <p><%= settings_label_with_text_field_tag key.to_sym %></p>
<% end -%>
</div>

<% @revert_columns.concat(inform_columns = %w(contact_addr help_url)) -%>
