<% content_for :topic_path do -%>
<%= render :partial => '/admin/shared/topic_path' %>
<% end -%>

<div class="box tabular">
  <% Admin::ImagesController::PNG_IMAGE_NAMES.each do |target| -%>
    <% form_tag admin_images_update_path(:target => target), :multipart => true do -%>
      <label for="<%= target %>"><%= _('Admin::ImagesController|' + target) %></label>
      <%= file_field_tag target, :size => 60 %>
      <%= submit_tag _('Upload'), :disable_with => _('Uploading...') %>
      <%= help_icon_tag :content => _("Admin::ImagesController|#{target}_description") %>
    <% end -%>
  <% end -%>
  <% Admin::ImagesController::BACKGROUND_IMAGE_NAMES.each_with_index do |target, index| -%>
    <% form_tag admin_images_update_path(:target => target), :multipart => true do -%>
      <label for="<%= target %>"><%= _('Admin::ImagesController|background') + (index + 1).to_s %></label>
      <%= file_field_tag target, :size => 60 %>
      <%= submit_tag _('Upload'), :disable_with => _('Uploading...') %>
      <%= help_icon_tag :content => _("Admin::ImagesController|background_description") %>
    <% end -%>
  <% end -%>
</div>
