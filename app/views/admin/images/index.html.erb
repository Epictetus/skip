<% content_for :topic_path do -%>
<%= render :partial => '/admin/shared/topic_path' %>
<% end -%>

<div class="box tabular">
  <h3><%= _('画像の形式について') %></h3>
  <p><%= _('ロゴはpng形式のみ、背景画像はjpg形式の画像のみ利用可能です。') %></p>
  <% Admin::ImagesController::LogoImage::IMAGE_NAMES.each do |target_name| -%>
    <%= render :partial => 'form',
               :locals => { :target_name => target_name,
                            :target_path => "/custom/images/#{target_name}.png",
                            :title => _("Admin::ImagesController|#{target_name}"),
                            :description => _("Admin::ImagesController|#{target_name}_description") } %>
  <% end -%>
  <% Admin::ImagesController::BackGroundImage::IMAGE_NAMES.each_with_index do |target_name, index| -%>
    <%= render :partial => 'form',
               :locals => { :target_name => target_name,
                            :target_path => "/custom/images/titles/#{target_name}.jpg",
                            :title => _("Admin::ImagesController|background") + (index + 1).to_s,
                            :description => _("Admin::ImagesController|background_description") } %>
  <% end -%>
  <% target_name = Admin::ImagesController::FaviconImage::IMAGE_NAMES[0] -%>
  <%= render :partial => 'form',
             :locals => { :target_name => target_name,
                          :target_path => "/#{target_name}.ico",
                          :title => _("Admin::ImagesController|favicon"),
                          :description => _("Admin::ImagesController|favicon_description") } %>
</div>
