<%= render :partial => '/admin/contents_left' %>
<% content_for :contents_right do -%>
<h1>Listing board_entries</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Contents</th>
    <th>Category</th>
  </tr>

<% for board_entry in @board_entries %>
  <tr>
    <td><%=h board_entry.title %></td>
    <td><%=h board_entry.contents %></td>
    <td><%=h board_entry.category %></td>
    <td><%= link_to 'Show', board_entry %></td>
    <td><%= link_to 'Edit', edit_admin_board_entry_path(board_entry) %></td>
    <td><%= link_to 'Destroy', board_entry, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New board_entry', new_admin_board_entry_path %>
<% end -%>
