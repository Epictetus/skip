<%= render :partial => '/admin/contents_left' %>
<% content_for :contents_right do -%>
<h1>New board_entry_comment</h1>

<% form_for(@board_entry_comment, :url => admin_board_entry_board_entry_comments_path(@board_entry)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :contents %><br />
    <%= f.text_area :contents %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_board_entry_board_entry_comments_path(@board_entry) %>
<% end -%>
