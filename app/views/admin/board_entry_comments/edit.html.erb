<%= render :partial => '/admin/contents_left' %>
<% content_for :contents_right do -%>
<h1><%= _('Editing %{model}') % {:model => _('board entry comment')} %></h1>

<% form_for(@board_entry_comment, :url => admin_board_entry_board_entry_comment_path(@board_entry, @board_entry_comment), :method => 'put') do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :contents %><br />
    <%= f.text_area :contents %>
  </p>
  <p>
    <%= f.submit _('Update') %>
  </p>
<% end %>

<%= link_to _('Show'), admin_board_entry_board_entry_comment_path(@board_entry, @board_entry_comment) %> |
<%= link_to _('Back'), admin_board_entry_board_entry_comments_path(@board_entry) %>
<% end -%>
