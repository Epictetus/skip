<%= render :partial => '/admin/contents_left' %>
<% content_for :contents_right do -%>
<h2><%= _('Listing %{model}') % {:model => _('group')} %></h2>

<div class="box tabular">
<%= render :partial => '/admin/search_box' %>
<table class="normal">
  <tr>
    <% %w[Name Gid Description Protected Category].each do |column| -%>
    <th><%= _("Admin::Group|#{column}") %></th>
    <% end -%>
  </tr>

<% for group in @groups %>
  <tr class="<%= cycle('line_0', 'line_1') %>">
    <td><%=h group.name %></td>
    <td><%=h group.gid %></td>
    <td><%=h group.description %></td>
    <td><%=h group.protected %></td>
    <td><%=h group.category %></td>
    <td><%= link_to _('Show'), group %></td>
    <td><%= link_to _('Destroy'), group, :confirm => _('Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<br />

<% end -%>
