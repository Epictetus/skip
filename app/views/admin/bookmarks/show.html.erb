<%= render :partial => '/admin/contents_left' %>
<% content_for :contents_right do -%>
<h2><%= _('%{model} Show') % {:model => _('bookmark')} %></h2>

<div class="box">
<p>
  <b><%= label @bookmark.class, :title %>:</b>
  <%=h @bookmark.title %>
</p>

<p>
  <b><%= label @bookmark.class, :url %>:</b>
  <%=h @bookmark.url %>
</p>
</div>
<%= link_to _('Back'), admin_bookmarks_path %> |
<%= link_to _('Listing %{model}') % {:model => _('bookmark comment')}, admin_bookmark_bookmark_comments_path(@bookmark) %>
<% end -%>
