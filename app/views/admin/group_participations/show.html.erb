<%= render :partial => '/admin/contents_left' %>
<% content_for :contents_right do -%>
<h2><%= _('%{model} Show') % {:model => _('group participation')} %></h2>

<div class="box">
<p>
  <b><%= label @group_participation.class, :user %>:</b>
  <%=h @group_participation.user.name %>
</p>

<p>
  <b><%= label @group_participation.class, :waiting %>:</b>
  <%=h @group_participation.waiting %>
</p>

<p>
  <b><%= label @group_participation.class, :owned %>:</b>
  <%=h @group_participation.owned %>
</p>

<p>
  <b><%= label @group_participation.class, :favorite %>:</b>
  <%=h @group_participation.favorite %>
</p>
</div>
<%= link_to _('Back'), admin_group_group_participations_path(@group) %>
<% end -%>
